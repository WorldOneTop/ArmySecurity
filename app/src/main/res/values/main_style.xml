<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textview_card_title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="textview_card_sub_title">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cardview_large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
    </style>
    <style name="cardview_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">0dp</item>
    </style>
    <style name="cardview_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tintMode">src_atop</item>
    </style>

    <style name="icon_search">
        <item name="android:src">@drawable/icon_tab_search</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:contentDescription">@string/search</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="tint">@color/white</item>
    </style>
    <style name="icon_event">
        <item name="android:src">@drawable/icon_tab_event</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:contentDescription">@string/search</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="tint">@color/white</item>
    </style>
    <style name="cemetery_detail_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
    <style name="cemetery_detail_data">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>