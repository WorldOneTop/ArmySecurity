<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.event.PledgeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                android:orientation="vertical">

                <ImageView
                    style="@style/cardview_image"
                    android:layout_height="0dp"
                    android:src="@drawable/img_card_pledge"
                    android:layout_weight="1"
                    tools:ignore="ContentDescription" />
            </LinearLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:text="@string/pledge_sound1"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/primaryDarkColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"/>

        <SeekBar
            android:id="@+id/seekbar1"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/play1"
            android:src="@drawable/ic_baseline_not_started_24"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/primaryColor"/>
        <TextView
            android:text="@string/pledge_sound2"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/primaryDarkColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"/>

        <SeekBar
            android:id="@+id/seekbar2"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/play2"
            android:src="@drawable/ic_baseline_not_started_24"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/primaryColor"/>
        <TextView
            android:text="@string/pledge_sound3"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/primaryDarkColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"/>

        <SeekBar
            android:id="@+id/seekbar3"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/play3"
            android:src="@drawable/ic_baseline_not_started_24"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/primaryColor"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>