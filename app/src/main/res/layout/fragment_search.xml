<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SearchFragment"
    android:orientation="vertical"
    android:padding="18dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cemeteryLayout"
        style="@style/cardview_search">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:tint="#50000000"
                android:tintMode="src_atop"
                android:src="@drawable/img_card_cemetery"
                android:contentDescription="@string/search_cemetery_title" />

            <ImageView
                android:id="@+id/cemeteryIcon"
                style="@style/icon_search"
                tools:ignore="ContentDescription,MissingConstraints" />
            <TextView
                android:id="@+id/cemeterySubTitle"
                android:text="@string/search_cemetery_sub_title"
                style="@style/textview_card_sub_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cemeteryIcon"/>
            <TextView
                android:id="@+id/cemeteryTitle"
                android:text="@string/search_cemetery_title"
                style="@style/textview_card_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cemeterySubTitle"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="0dp"
        android:layout_height="30dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/guarderLayout"
        style="@style/cardview_search">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:tint="#33000000"
                android:tintMode="src_atop"
                android:src="@drawable/img_card_guarder"
                android:contentDescription="@string/search_guarder_title" />

            <ImageView
                android:id="@+id/guarderIcon"
                style="@style/icon_search"
                tools:ignore="ContentDescription,MissingConstraints" />
            <TextView
                android:id="@+id/guarderSubTitle"
                android:text="@string/search_guarder_sub_title"
                style="@style/textview_card_sub_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guarderIcon"/>
            <TextView
                android:id="@+id/guarderTitle"
                android:text="@string/search_guarder_title"
                style="@style/textview_card_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guarderSubTitle"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>